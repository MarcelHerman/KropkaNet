@page
@model ProjektTurnieju.Pages.Kapitan.EditModel

@{
    ViewData["Title"] = "Edit";
}
@if(User.IsInRole(Role.Kapitan.ToString()))
{
<h1>Edit</h1>

<h4>Druzyna</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Druzyna.Id" />
            <div class="form-group">
                <label asp-for="Druzyna.NazwaDruzyny" class="control-label"></label>
                <input asp-for="Druzyna.NazwaDruzyny" class="form-control" />
                <span asp-validation-for="Druzyna.NazwaDruzyny" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Kapitan/DetailsDruzyna" asp-route-id="@Model.Druzyna?.Id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else
{
    <h2>Sekcja tylko dla kapitanów</h2>
}