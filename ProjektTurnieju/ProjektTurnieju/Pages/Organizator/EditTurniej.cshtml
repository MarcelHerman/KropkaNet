@page
@model ProjektTurnieju.Pages.Organizator.EditTurniejModel
@{
	ViewData["Title"] = "Edycja turnieju";
}
@if(User.IsInRole(Role.Organizator.ToString()))
{
<h2>Edycja Turnieju</h2>

<div class="container">
	<form class="form-horizontal" method="post">
		@Html.Hidden("turniej.Id", Model.newTurniej.Id)
		<div class="form-group">
			<label asp-for="newTurniej.Nazwa" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input asp-for="newTurniej.Nazwa" class="form-control">
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn btn-primary">Zatwierdź</button>
			</div>
			<br />

	</form>
</div>
<br />
}
else
{
	<h2>Sekcja tylko dla organizatorów</h2>
}