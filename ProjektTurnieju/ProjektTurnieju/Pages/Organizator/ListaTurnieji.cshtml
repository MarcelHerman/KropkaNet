@page
@model ListaTurniejiModel

@{
    ViewData["Title"] = "Turnieje";
}
@if(User.IsInRole(Role.Organizator.ToString()))
{
<h2>Lista Turnieji</h2>
<br />
<br />
<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">
				@Html.DisplayNameFor(model =>
				Model.turniejList[0].Id)
			</th>
			<th scope="col">
				@Html.DisplayNameFor(model =>
				Model.turniejList[0].Nazwa)
			</th>
			<th scope="col">Akcja</th>
		</tr>
	</thead>
		<tbody>
			@foreach (var p in Model.turniejList)
			{
				<tr>
					<th scope="row">@Html.DisplayFor(m => p.Id)</th>
					<td>@Html.DisplayFor(m => p.Nazwa)</td>
					<td>
						<a asp-page="/Organizator/EditTurniej" asp-route-id="@p.Id">Zarządzaj</a> |
						<a asp-page="/Organizator/DeleteTurniej" asp-route-id="@p.Id">Usuń</a> |
					</td>
				</tr>
			}
		</tbody>
</table>
<br />
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<a asp-page="/Organizator/CreateTurniej" class="btn btn-danger btn-outline-warning">Dodaj Nowy Turniej</a>
	</div>
</div>
}
else
{
	<h2>Sekcja tylko dla organizatorów</h2>
}