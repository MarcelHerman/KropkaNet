@page
@model EkranLogowaniaModel
@using ProjektTurnieju
@namespace ProjektTurnieju.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Logowanie</h1>
    <form method="post">

        <label asp-for="uzytkownik" class="text-bold">Imię</label>
        <input asp-for="uzytkownik.Login" />
        <span asp-validation-for="uzytkownik.Haslo" class="text-danger"></span>

        <button type="submit">Zatwierdź</button>
    </form>

</body>
</html>
